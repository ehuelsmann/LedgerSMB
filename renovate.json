{
    "extends": [
      "config:base"
    ],
    "baseBranches": [ "master", "1.10" ],
    "cpanfile": {
        "enabled": false
    },
    "packageRules": [
        {
            "matchPackagePatterns": [
                "*"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "all non-major dependencies",
            "groupSlug": "all-minor-patch",
            "automerge": true
        },
        {
            "matchPackagePatterns": ["^selenium/"],
            "allowedVersions": "<4"
        },
        {
            "matchPackagePatterns": [
                "*"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false
        }

    ],
    "timezone": "Etc/Greenwich",
    "schedule": [
        "after 11pm on friday",
        "before 7am on saturday"
    ],
    "vulnerabilityAlerts": {
        "schedule": null
    }
}
