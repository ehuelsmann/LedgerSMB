<workflow>
  <type>Year-End</type>
  <persister>JournalEntry</persister>
  <description>...</description>
  <state name="INITIAL" autorun="yes">
    <action name="post" resulting_state="POSTED">
      <condition name="!period-closed" />
    </action>
  </state>
  <state name="POSTED">
    <!-- action name="save_info" resulting_state="NOCHANGE" / -->
    <action name="reverse" resulting_state="REVERSED">
      <condition name="!followed-by-closed-period" />
    </action>
  </state>
  <state name="REVERSED" />

  <observer class="LedgerSMB::Workflow::Observer::YearEnds" />
</workflow>
